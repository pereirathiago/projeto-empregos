{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "types": ["express", "node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@models/*": ["models/*"],
      "@middlewares/*": ["middlewares/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}